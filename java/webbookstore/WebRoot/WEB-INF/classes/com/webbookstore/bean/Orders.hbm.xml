<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.webbookstore.bean.Orders" table="orders">
		<id name="orderId" type="java.lang.Integer">
			<column name="order_id_"/>
			<generator class="native"/>
		</id>
		
		<many-to-one name="user" class="com.webbookstore.bean.User">
			<column name="user_id_"/>
		</many-to-one>
		
		<property name="orderDate" column="order_date_" type="java.util.Date"/>
		
		<set name="orderItems" cascade="all" inverse="true">
			<key>
				<column name="order_id_"/>
			</key>
			<one-to-many class="com.webbookstore.bean.OrderItem"/>
		</set>
	</class>

</hibernate-mapping>

<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>

	<global>
		<constant>
			<constant-name>postalCode</constant-name>
			<constant-value>^\d{5}\d*$</constant-value>
		</constant>
	</global>

	<formset>

		<form name="HelloForm">
			<field property="message" depends="required">
				<msg name="required" key="用户名不能为空" resource="false" />
			</field>
			<field property="year" depends="required,mask">
				<msg name="required" key="year 不能为空" resource="false" />
				<msg name="mask" key="整数" resource="false" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9]*$</var-value>
				</var>
			</field>
		</form>

	</formset>



</form-validation>
